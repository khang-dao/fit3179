{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Number of Olympic Medals by Country",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/khang-dao/FIT3179-W9-HW/master/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/khang-dao/FIT3179-W9-HW/master/data/olympics-1986-2016-cleaned.csv"
          },
          "key": "Country",
          "fields": ["Medals"]
        }
      },
      {"calculate": "datum.Medals", "as": "Total #Medals"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Total #Medals",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Medals", "type": "quantitative"}
      ]
    }
  }